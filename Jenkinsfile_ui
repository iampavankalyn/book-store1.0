pipeline {
    agent any
    
    stages {
        stage('clean WS') {
            steps {
                cleanWs()
            }
        }
        stage('scm checkout') {
            steps {
               git branch: 'JenkinsTest', url: 'https://github.com/iampavankalyn/book-store1.0.git' 
            }
        }
        stage('build-FE-docker-image and push'){
            steps{
                sh '''
                    cd bookstore-frontend-react-app
                    docker build -t bookstore-frontend-react-app:1.0 .
                    docker tag bookstore-frontend-react-app:1.0 iampavankalyan/bookstore-frontend-react-app:1.0
                    docker login -u=iampavankalyan -p=Chanikya@123
                    docker push iampavankalyan/bookstore-frontend-react-app:1.0  
                '''
            }
        }
    }
}
